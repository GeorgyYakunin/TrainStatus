<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1.0">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        android:layout_weight="1.0"
        app:cardElevation="2.0dip">

        <LinearLayout
            android:id="@+id/ll_pnr_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minWidth="154dp"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingTop="14dp"
            android:paddingRight="12dp"
            android:paddingBottom="14dp">

            <com.Example.IRCTCWhereismyTrain.widget.MyTextView
                android:id="@+id/tv_ticket_class"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/one_ac"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:txttype="@string/medium" />

            <com.Example.IRCTCWhereismyTrain.widget.MyTextView
                android:id="@+id/tv_ticket_price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:background="@drawable/bg_lazzy_loader_bg"
                android:gravity="left"
                android:text=""
                android:textColor="@color/black"
                android:textSize="13sp"
                app:txttype="@string/medium" />

            <com.Example.IRCTCWhereismyTrain.widget.MyTextView
                android:id="@+id/tv_ticket_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:background="@drawable/bg_lazzy_loader_bg"
                android:gravity="left"
                android:text="@string/tap_to_update"
                android:textColor="#fff09819"
                android:textSize="17sp"
                app:txttype="@string/regular" />

            <com.Example.IRCTCWhereismyTrain.widget.MyTextView
                android:id="@+id/tv_ticket_sync"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:gravity="left"
                android:text="@string/tap_to_update"
                android:textColor="@color/medium_light_grey"
                android:textSize="13sp"
                android:visibility="gone"
                app:txttype="@string/regular" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>